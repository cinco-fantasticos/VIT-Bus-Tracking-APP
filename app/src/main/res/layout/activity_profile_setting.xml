<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/profile_bcgrnd"
        android:orientation="vertical"
        tools:context=".Profile_setting">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="200dp"
                    android:padding="10dp"
                    android:background="#FFC107"
    >
        <ImageView android:layout_width="100dp" android:layout_height="100dp"
                   android:id="@+id/profile_image"
                   android:src="@drawable/profile"
                   android:layout_centerVertical="true"
        />

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="adleon"
                  android:textSize="20sp"
                  android:fontFamily="@font/bungee"
                  android:layout_toEndOf="@id/profile_image"
                  android:layout_marginStart="10dp"
                  android:layout_centerVertical="true"
                  android:id="@+id/profile_name"
        />

    </RelativeLayout>

  <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="vertical"
                >

      <com.google.android.material.textfield.TextInputLayout
              android:layout_width="match_parent" android:layout_height="wrap_content"
              android:hint="Name"
              android:layout_marginBottom="10dp"
              >
          <com.google.android.material.textfield.TextInputEditText
                  android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:drawableStart="@drawable/user_icon"
                  android:drawablePadding="10dp"
                  android:id="@+id/pro_name"
                  android:text="Ujjwal Pandey"
          />


      </com.google.android.material.textfield.TextInputLayout>

      <com.google.android.material.textfield.TextInputLayout
              android:layout_width="match_parent" android:layout_height="wrap_content"
              android:hint="Email - address"
              android:layout_marginBottom="10dp"
      >
          <com.google.android.material.textfield.TextInputEditText
                  android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:drawableStart="@drawable/email_icon"
                  android:drawablePadding="10dp"
                  android:id="@id/email"
                  android:text="ujjwal.pandey408@gmail.com"
          />


      </com.google.android.material.textfield.TextInputLayout>

      <com.google.android.material.textfield.TextInputLayout
              android:layout_width="match_parent" android:layout_height="wrap_content"
              android:hint="Passwrod"
              android:layout_marginBottom="10dp"
      >
          <com.google.android.material.textfield.TextInputEditText
                  android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:drawableStart="@drawable/pass_icon"
                  android:drawablePadding="10dp"
                  android:id="@+id/password"
                  android:text="abcd123456"
          />


      </com.google.android.material.textfield.TextInputLayout>

      <com.google.android.material.textfield.TextInputLayout
              android:layout_width="match_parent" android:layout_height="wrap_content"
              android:hint="Phone Number"
              android:layout_marginBottom="10dp"
      >
          <com.google.android.material.textfield.TextInputEditText
                  android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:drawableStart="@drawable/phone_icon"
                  android:drawablePadding="10dp"
                  android:id="@+id/P_NO"
                  android:text="+911234567890"
          />


      </com.google.android.material.textfield.TextInputLayout>

      <Button android:layout_width="match_parent" android:layout_height="wrap_content"
              android:text="Update"
              android:fontFamily="@font/bungee"
              android:id="@+id/update"
              android:background="#fece2f"
              />
  </LinearLayout>
                  


</LinearLayout>