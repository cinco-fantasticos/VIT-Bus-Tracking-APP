<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/backgrnd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserDashboard">
  <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="vertical"
                >

      <GridLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:columnOrderPreserved="true"
                  android:columnCount="2"
                  android:rowCount="3"
                  android:orientation="horizontal"
                  android:paddingHorizontal="10dp"
      >

          <androidx.cardview.widget.CardView android:layout_height="88dp"
                                             android:layout_width="88dp"
                                             app:cardCornerRadius="10dp"
                                             android:layout_marginStart="32dp"
                                             android:layout_marginTop="85dp"
                                             app:cardBackgroundColor="#F44336">


              <Button android:layout_width="85dp"
                      android:layout_height="85dp"
                      android:id="@+id/tracker"
                      android:shadowRadius="@android:integer/config_shortAnimTime"
                      android:background="@drawable/tracker"
              />
          </androidx.cardview.widget.CardView>


          <androidx.cardview.widget.CardView android:layout_height="88dp"
                                             android:layout_width="88dp"
                                             app:cardCornerRadius="10dp"
                                             android:layout_marginStart="85dp"
                                             android:layout_marginTop="85dp"

                                             app:cardBackgroundColor="#9C27B0">

              <Button android:layout_width="85dp"
                      android:layout_height="85dp"
                      android:id="@+id/schedule"
                      android:shadowRadius="@android:integer/config_shortAnimTime"
                      android:background="@drawable/schedule"
              />
          </androidx.cardview.widget.CardView>



      </GridLayout>

      <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
          <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Track Your Bus"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="5dp"
                    android:textSize="18sp"
          />
          <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Check Schedule"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="52dp"
                    android:layout_marginTop="5dp"
                    android:textSize="18sp"
          />

      </LinearLayout>

      <GridLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:columnOrderPreserved="true"
                  android:columnCount="2"
                  android:rowCount="3"
                  android:orientation="horizontal"
                  android:paddingHorizontal="10dp"
      >

          <androidx.cardview.widget.CardView android:layout_height="88dp"
                                             android:layout_width="88dp"
                                             app:cardCornerRadius="10dp"
                                             android:layout_marginStart="32dp"
                                             android:layout_marginTop="80dp"
                                             app:cardBackgroundColor="#A6E260">
              <Button android:layout_width="85dp"
                      android:layout_height="85dp"
                      android:id="@+id/profile_setting"
                      android:shadowRadius="@android:integer/config_shortAnimTime"
                      android:background="@drawable/profile_setting"
              />
          </androidx.cardview.widget.CardView>


          <androidx.cardview.widget.CardView android:layout_height="88dp"
                                             android:layout_width="88dp"
                                             app:cardCornerRadius="10dp"
                                             android:layout_marginStart="85dp"
                                             android:layout_marginTop="80dp"
                                             app:cardBackgroundColor="#FF9800">

              <Button android:layout_width="85dp"
                      android:layout_height="85dp"
                      android:id="@+id/calender"
                      android:shadowRadius="@android:integer/config_shortAnimTime"
                      android:background="@drawable/calender"
              />
          </androidx.cardview.widget.CardView>


      </GridLayout>

      <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal"
      >
          <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Profile Setting"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="5dp"
                    android:textSize="18sp"
          />
          <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Calender"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="78dp"
                    android:layout_marginTop="5dp"
                    android:textSize="18sp"
          />

      </LinearLayout>

      <androidx.cardview.widget.CardView android:layout_height="88dp"
                                         android:layout_width="88dp"
                                         app:cardCornerRadius="10dp"
                                         android:layout_marginTop="50dp"
                                         android:layout_marginStart="130dp">

          <Button android:layout_width="85dp"
                  android:layout_height="85dp"
                  android:id="@+id/help_desk"
                  android:shadowRadius="@android:integer/config_shortAnimTime"
                  android:background="@drawable/helpdesk"
          />

      </androidx.cardview.widget.CardView>

      <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Help-Desk"
                android:textColor="#FFFFFF"
                android:layout_marginStart="135dp"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
      />

  </LinearLayout>


</ScrollView>