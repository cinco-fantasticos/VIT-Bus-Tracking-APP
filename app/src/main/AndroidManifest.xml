<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.bus_tracking">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".DriverDashboard">
        </activity>
        <activity android:name=".Feedback">
        </activity>
        <activity android:name=".Help_Desk">
        </activity>
        <activity android:name=".Profile_setting">
        </activity>
        <activity android:name=".Calender">
        </activity>
        <activity android:name=".UserDashboard">
        </activity>
        <activity android:name=".SignUp">
        </activity>
        <activity android:name=".Login_page">
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <meta-data
                android:name="preloaded_fonts"
                android:resource="@array/preloaded_fonts"/>
    </application>

</manifest>